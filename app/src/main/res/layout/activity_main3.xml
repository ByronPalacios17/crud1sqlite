<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#696A6B"
    android:gravity="center"
    android:layout_margin="5dp"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATOS DEL ARTICULO"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="26dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="167dp"
                app:srcCompat="@drawable/prod" />

            <!-- android:background="@drawable/fon"
                android:drawableStart="@drawable/pro1" -->

            <EditText
                android:id="@+id/et_codigo"
                android:layout_width="326dp"
                android:layout_height="67dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableStart="@drawable/icon1"
                android:drawablePadding="5dp"
                android:hint="Ingrese el código"
                android:inputType="number"
                android:paddingLeft="25dp"
                android:shadowColor="#A82A2A"
                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="5"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/et_descripcion"
                android:layout_width="326dp"
                android:layout_height="67dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:drawableStart="@drawable/icon2"
                android:drawablePadding="5dp"
                android:hint="Ingrese la descripcion del articulo"
                android:inputType="text"
                android:paddingLeft="25dp"
                android:shadowColor="#A82A2A"
                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="5" />

            <EditText
                android:id="@+id/et_precio"
                android:layout_width="326dp"
                android:layout_height="67dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:drawableStart="@drawable/icon3"
                android:drawablePadding="5dp"
                android:hint="Ingrese el precio del articulo"
                android:inputType="numberDecimal"
                android:paddingLeft="25dp"
                android:shadowColor="#A82A2A"
                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="5" />

            <Button
                android:id="@+id/btn_guardar"
                android:layout_width="251dp"
                android:layout_height="52dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:onClick="alta"
                android:backgroundTint="@color/uno"
                android:text="Guardar"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:shadowColor="@color/black"
                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="8"
                />

            <Button
                android:id="@+id/btn_consultar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="Consultar por código"
                android:onClick="consultaporcodigo"
                android:backgroundTint="@color/uno"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="8"
                />

            <Button
                android:id="@+id/btn_consultar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="Consultar por descripcion"
                android:onClick="consultapordescripcion"
                android:backgroundTint="@color/uno"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="8"/>

            <Button
                android:id="@+id/btn_eliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="Borrar"
                android:onClick="bajaporcodigo"
                android:backgroundTint="@color/uno"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="8"/>

            <Button
                android:id="@+id/btn_actualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="Editar"
                android:onClick="modificacion"
                android:backgroundTint="@color/uno"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="8" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>